<!DOCTYPE html>
<html>
<head lang="zh-cn">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>校园动态-#(article.article_name)-佛山协同国际学校</title>
    <meta name="Keywords" content="佛山市实验学校,协同学校,佛山市协同学校,佛山协同国际学校">
    <meta name="Description"
          content="佛山市协同（国际）学校，由佛山市实验学校教育集团管理运营，与美国协同教育集团战略合作，是一所国际化、特色化、精英化的学校。国内教育部为小学初中9年一贯制（将开设高中部），国际教育部为幼儿园小学初中高中15年一贯制。秉承“协性同心、和人济世”的教育理念，培养适应现代、走向世界、引领未来的精英人才。">
    <meta name="renderer" content="webkit">
    <meta http-equiv="Cache-Control" content="no-siteapp"/>
    <link rel="stylesheet" href="../css/bootstrap.min.css"/>
    <link rel="stylesheet" href="../css/style.css"/>
    <script src="../js/react.min.js"></script>
    <script src="../js/react-dom.min.js"></script>
    <script src="../js/browser.min.js"></script>
    <script src="../js/react-bootstrap.min.js"></script>
    <script src="../js/reqwest.min.js"></script>
    <script src="../js/util.js"></script>
</head>
<body id="root">
</body>
<script type="text/babel">
    class Component extends React.Component {
        constructor(props) {
            super(props);

            this.state = {
            }
        }

        componentDidMount() {
        }

        componentWillUnmount() {
        }

        handleLogin() {
            login();
        }

        handleLogout() {
            logout();
        }
        
        render() {
            const Navbar = ReactBootstrap.Navbar;
            const Nav = ReactBootstrap.Nav;
            const NavItem = ReactBootstrap.NavItem;
            const NavDropdown = ReactBootstrap.NavDropdown;
            const MenuItem = ReactBootstrap.MenuItem;
            const Carousel = ReactBootstrap.Carousel;
            const Pagination = ReactBootstrap.Pagination;
            return (
                    <div>
                        <Navbar className="hidden-md hidden-lg mobile-header">
						    <Navbar.Header>
						        <Navbar.Brand>
						            <a href="../index.html">佛山协同国际学校</a>
						        </Navbar.Brand>
						        <Navbar.Toggle/>
						    </Navbar.Header>
						    <Navbar.Collapse>
						        <Nav>
							 		#for(websiteMenu : websiteMenuList)
						    	 		<NavDropdown eventKey={#(for.count)} title="#(websiteMenu.website_menu_name)" href="../#(websiteMenu.website_menu_url)" id="basic-nav-dropdown">
						    	 			#for(websiteMenuChildren : websiteMenu.children)
						    	 				<MenuItem eventKey={#(for.count)} href="../#(websiteMenuChildren.website_menu_url)">#(websiteMenuChildren.website_menu_name)</MenuItem>
						                        #if(!for.last)
						                        	<MenuItem divider/>
						                        #end
											#end
						                </NavDropdown>
						            #end
						        </Nav>
						    </Navbar.Collapse>
						</Navbar>
						<div className="header hidden-sm hidden-xs">
						    <div className="container">
						        <a className="header-logo" href="../index.html"></a>
						        <div className="header-extra">
						            {
						                getToken() == "" ?
						                        <li className="login" onClick={this.handleLogin.bind(this)}>学生登录</li>
						                        :
						                        <ul>
						                            <li>欢迎您：{getClazzName()}，{getStudentName()}</li>
						                            <li className="logout" onClick={this.handleLogout.bind(this)}>退出
						                            </li>
						                        </ul>
						            }
						        </div>
						        <div className="header-menu">
						            <ul>
						            	 #for(websiteMenu : websiteMenuList)
										<li>
											#if(for.first)
											<a href="../#(websiteMenu.website_menu_url)" className="on">#(websiteMenu.website_menu_name)</a>
											#else
											<a href="../#(websiteMenu.website_menu_url)">#(websiteMenu.website_menu_name)</a>
											#end
											<ul>
											    #for(websiteMenuChildren : websiteMenu.children)
												<li><a href="../#(websiteMenuChildren.website_menu_url)">#(websiteMenuChildren.website_menu_name)</a></li>
												#end
											</ul>
										</li>
						                #end
						            </ul>
						        </div>
						    </div>
						</div>
                        <Carousel className="banner">
							#for(advertisement : indexBannerList)
								<Carousel.Item>
									#if(advertisement.advertisement_link)
									<a href="#(advertisement.advertisement_link)">
										<img src={host + "#(advertisement.advertisement_image_file.file_original_path)"} style={{marginLeft: "auto", marginRight: "auto"}} alt="" />
									</a>
									#else
										<img src={host + "#(advertisement.advertisement_image_file.file_original_path)"} style={{marginLeft: "auto", marginRight: "auto"}} alt="" />
									#end
						        </Carousel.Item>
									
							#end
						</Carousel>
                        <div className="main">
                            <div className="container">
                                <div className="row">
                                    <div className="col-md-2 row-clo hidden-sm hidden-xs">
                                        <div className="main-left-title">
                                        	<div className="main-left-title-1">N</div>
                                            <div className="main-left-title-2">校园动态</div>
                                            <div className="main-left-title-3">EWS</div>
                                        </div>
                                        <div className="main-left-menu">
                                        	#for(bean : articleCategoryList)
											#if(bean.article_category_id == articleCategory.article_category_id)
											<li className="active">
												<a href="../xydt/#(bean.article_category_id).html">#(bean.article_category_name)</a>
											</li>
											#else
											<li>
												<a href="../xydt/#(bean.article_category_id).html">#(bean.article_category_name)</a>
											</li>
											#end
											#end
                                        </div>
                                        <div className="margin-top-15 index-main-image-mask">
										    <a href="../xxb.html">
										        <img width="100%" src="../image/list_01.jpg" alt=""/>
										        <div className="index-main-image-mask-text">
										        		小学部
										            <p>立即进入>></p>
										        </div>
										    </a>
										</div>
										<div className="margin-top-15 index-main-image-mask">
										    <a href="../zxb.html">
										        <img width="100%" src="../image/list_02.jpg" alt=""/>
										        <div className="index-main-image-mask-text">
										        		中学部
										            <p>立即进入>></p>
										        </div>
										    </a>
										</div>
										<div className="margin-top-15 index-main-image-mask">
										    <a href="../gjb.html">
										        <img width="100%" src="../image/list_03.jpg" alt=""/>
										        <div className="index-main-image-mask-text">
										        		国际部
										            <p>立即进入>></p>
										        </div>
										    </a>
										</div>
                                    </div>
                                    <div className="col-md-10 row-clo">
                                        <div className="main-right-title">
                                           	#(articleCategory.article_category_name)
                                            <div className="main-right-title-extra">
                                                <a href="../index.html">首页</a> &gt;<a href="../xydt/#(articleCategory.article_category_id).html">#(articleCategory.article_category_name)</a> &gt; <a>#(article.article_name)</a>
                                            </div>
                                        </div>
                                        <div className="main-right-content">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        #include("footer.template")
                    </div>
            );
        }
    }

    ReactDOM.render(<Component/>, document.getElementById("root"));
</script>